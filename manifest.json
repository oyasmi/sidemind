{
  "manifest_version": 3,
  "name": "SideMind",
  "version": "1.0.0",
  "description": "Quick LLM conversations in your sidebar",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_title": "Open SideMind"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}